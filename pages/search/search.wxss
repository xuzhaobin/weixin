.inputbox{
	height: 80rpx;
	width: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	border-bottom: 1px solid #ececec;
	position: fixed;
	top: 0;
	left: 0;
	background-color: #f6f6f6;
}
.searchinput{
	height: 50rpx;
	width: 80%;
	box-sizing: border-box;
	border-radius: 50rpx;
	border: 1px solid #acacac;
	font-size: 28rpx;
	padding-left: 20rpx;
}
.classify{
	margin-top: 200rpx;
	width: 100%;
	padding: 0 130rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.tit{
	font-size: 35rpx;
	color: #acacac;
}
.classifys{
	width: 100%;
	margin-top: 50rpx;
	display: flex;
	align-items: center;
	flex-wrap: wrap;
	justify-content: center;
}
.names{
	margin: 10rpx;
	font-size: 28rpx;
	color: #666;
	height: 55rpx;
	line-height: 55rpx;
	padding:0 20rpx;
	border:1px solid #666;
	border-radius: 55rpx;
}
.listbox{
	height: 100%;
	box-sizing: border-box;
	padding-top: 80rpx;
	width: 100%;
	display: flex;
	flex-direction: column;
	background-color: #fff;
}
.lists{
  height: 200rpx;
  border-bottom: 1px solid #ececec;
  padding:15rpx;
  display: flex;
}
.img{
  height: 170rpx;
  width: 120rpx;
  margin-right: 20rpx;
}
.info{
  height: 170rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.name{
  display: flex;
  justify-content: space-between;
}
.left{
	font-size: 30rpx;
	color: #333;
}
.right{
	font-size: 30rpx;
	color: deepskyblue;
}
.oldname{
	color: #999;
	font-size: 28rpx;
	margin-top: -50rpx;
}
.time{
	color: #666;
	font-size: 28rpx;
}

























/**index.wxss**/
.out{
	height: 100%;
	width: 100%;
}
.out .container{
	box-shadow: -10px 10px 20px #888888;
	position: relative;
	overflow: hidden;
	background-color: #f6f6f6;
}
.out .cloth{
	position: absolute;
	height: 100%;
	width: 100%;
	left: 0;
	top: 0;
	z-index: 999;
}
.out .left_list{
	position: absolute;
	top: 0;
	left: 0;
	height: 100%;
	width: 100%;
}
.out .left_lists{
	height: 50%;
	margin-top: 30%;
	display: flex;
	flex-direction: column;
}
.out .lefts{
	height: 100rpx;
	font-size: 35rpx;
	color: #666;
	box-sizing: border-box;
	padding-left: 50rpx;
	display: flex;
	align-items: center;
}
.out .switch{
	margin-left: 20rpx;
}
.night{
	transition: all 0.5s;
	background-color: #262628;
}
.night .lefts{
	transition: all 0.5s;
	color: #f5f5f5;
}
.night .container {
  transition: all 0.5s;
  background: #262628;
  box-shadow: -10px 10px 20px #000;
}
.night .moviename{
	transition: all 0.5s;
    color: #f5f5f5;
}
.swiper{
	height: 100%;
	width: 100%;
	box-sizing: border-box;
	padding-top: 70rpx;
	z-index: 2;
}
.items{
	height: 100%;
	width: 100%;
	position: relative;
	display: flex;
	align-items: center;
	flex-direction: column;
	justify-content: center;
}
.backs{
	height: 620rpx;
	width: 90%;
	position: absolute;
	left: 5%;
	bottom: 6%;
	background-color: #ececec;
	z-index: -99;
	border-radius: 50rpx;
}
.night .backs{
	background-color: #000;
	transition: all 0.5s;
}
.img1{
	height: 400rpx;
	width: 280rpx;
	border-radius: 5rpx;
	box-shadow: 3rpx 5rpx 20rpx #282828;
}
.text1{
	color: #000;
	font-size: 40rpx;
	margin-top: 50rpx;
}
.night .text1{
	color: #fff;
	transition: all 0.5s;
}
.text2{
	color: #666;
	font-size: 30rpx;
	margin-top: 20rpx;
}
.night .text2{
	color: #f5f5f5;
	transition: all 0.5s;
}
.text3{
	color: #666;
	font-size: 30rpx;
	margin-top: 20rpx;
	width: 600rpx;
	overflow: hidden;
	text-align: center;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.night .text3{
	color: #f5f5f5;
	transition: all 0.5s;
}
.imgbig{
	position: absolute;
	top: 0rpx;
	width: 100%;
	height: 420rpx;
	z-index: 0;
}
.lineback{
	height: 100%;
	width: 100%;
	position: absolute;
	left: 0;
	top: 0rpx;
	background:-webkit-linear-gradient(top, 
			rgba(99,104,110,.8) 0%,
			rgba(99,104,110,0) 8%,
			rgba(99,104,110,0) 25%,
			rgba(99,104,110,1) 35%,
			rgba(99,104,110,1) 100%);
	z-index: 1;
}
.searchbox{
	box-sizing: border-box;
	background:transparent;
	z-index: 999;
	top: 10rpx;
	padding: 0 20rpx;
}
.searchview{
	border:0;
	padding: 0;
}
.set{
  height: 50rpx;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  z-index:99999;
}
.searchview{
	height: 50rpx;
	width: 50rpx;
	position: absolute;
	top: 20rpx;
	right: 20rpx;
	z-index:99999;
}
.searchicon{
	margin: 0;
	padding: 0;
}


